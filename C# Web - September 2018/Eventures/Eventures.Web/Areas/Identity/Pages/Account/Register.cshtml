@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container" style="padding-top: 20px; text-align: center">
    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <section>
                <h2 style="font-weight: bold">@ViewData["Title"]</h2>
                <form method="post">
                    <hr style="height: 3px; background-color: #AFEEEE" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Input.UserName"></label>
                                <input asp-for="Input.UserName" class="form-control" placeholder="Username..."/>
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" placeholder="Password..." />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" placeholder="Email..." />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password..."/>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr style="height: 3px; background-color: #AFEEEE" />
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Input.FirstName"></label>
                                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name..."/>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Input.LastName"></label>
                                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name..." />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label asp-for="Input.UniversalCitizenNumber"></label>
                                <input asp-for="Input.UniversalCitizenNumber" class="form-control" placeholder="Universal Citizen Number..."/>
                                <span asp-validation-for="Input.UniversalCitizenNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr style="height: 3px; background-color: #AFEEEE" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-default" style="background-color: #AFEEEE; color: black">Register</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}