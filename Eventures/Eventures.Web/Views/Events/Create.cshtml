@model Eventures.Web.Models.EventModel

@{
    ViewData["Title"] = "Create Event";
}

<div class="container" style="padding-top: 20px; text-align: center">
    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <section>
                <h2 style="font-weight: bold">@ViewData["Title"]</h2>
                <form method="post">
                    <hr style="height: 3px; background-color: #AFEEEE" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Name..." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Place"></label>
                                <input asp-for="Place" class="form-control" placeholder="Place..." />
                                <span asp-validation-for="Place" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr style="height: 3px; background-color: #AFEEEE" />
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="Start"></label>
                                <input asp-for="Start" class="form-control" placeholder="Start..." />
                                <span asp-validation-for="Start" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="End"></label>
                                <input asp-for="End" class="form-control" placeholder="End..." />
                                <span asp-validation-for="End" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr style="height: 3px; background-color: #AFEEEE" />
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="TotalTickets"></label>
                                <input asp-for="TotalTickets" class="form-control" placeholder="Total Tickets..." />
                                <span asp-validation-for="TotalTickets" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label asp-for="PricePerTicket"></label>
                                <input asp-for="PricePerTicket" class="form-control" placeholder="Price per Ticket..." />
                                <span asp-validation-for="PricePerTicket" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr style="height: 3px; background-color: #AFEEEE" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-default" style="background-color: #AFEEEE; color: black">Create Event</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}